{
    "extends": "tslint:recommended",
    "rulesDirectory": ["src/"],
    "rules": {
        "no-console": true,
        "only-arrow-functions": [
            true,
            "allow-declarations",
            "allow-named-functions"
        ],
       "no-empty": true,
       "member-ordering":true,
       "quotemark":false,
       "semicolon": [true, "always", "ignore-bound-class-methods"]
    }
}