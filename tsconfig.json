{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "noImplicitReturns": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es7",
      "dom",
    ],
    "strictFunctionTypes": false,
  
    // "types":["ts-jest"],
    "typeRoots": [
      "typings"
    ],
    "paths": {
      "@shared/*": [
        "src/@shared/*"
      ],
      "@src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "**/*.test.js",
    "**/*.test.ts",
    "**/*.spec.ts",
    "./node_modules/*",
    "./dist/*"
  ]
}