{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "preserve",
    "noImplicitReturns": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es7", "dom"],
    "typeRoots": [
      "typings"
    ],
    "paths": {
      "@shared/*": ["src/@shared/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}