{
  "compilerOptions": {
    "outDir": "./dist/",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": [
      "typings"
    ],
  },
  "include": [
    "./src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}